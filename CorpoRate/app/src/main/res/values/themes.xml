<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CorpoRate" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Flare</item>
        <item name="colorOnPrimary">@color/Milk</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/MatteCharcoal</item>
        <item name="colorOnSecondary">@color/Milk</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Overflow Menu icon -->
        <item name="android:actionOverflowButtonStyle">@style/MyToolbarOverflow</item>
    </style>

    <!-- Overflow Menu icon -->
    <style name="MyToolbarOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/menu_icon</item>
    </style>
</resources>